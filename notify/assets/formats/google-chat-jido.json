{
    "cards": [
        {
            "header": {
                "title": "${PARAMS_TITLE}",
                "subtitle": "${PARAMS_SUBTITLE}",
                "imageUrl": "${PARAMS_ICON}",
                "imageStyle": "IMAGE"
            },
            "sections": [
                {
                    "widgets": [
                        {
                            "keyValue": {
                                "topLabel": "Pipeline",
                                "content": "${BUILD_TEAM_NAME} / ${BUILD_PIPELINE_NAME}<br>${BUILD_JOB_NAME} @ ${BUILD_NAME}<br><a href=\"${JIDO_HOST}\">${JIDO_HOST}</a>",
                                "contentMultiline": "false",
                                "onClick": {
                                    "openLink": {
                                        "url": "${JIDO_HOST}/teams/${BUILD_TEAM_NAME}/pipelines/${BUILD_PIPELINE_NAME}"
                                    }
                                }
                            }
                        },
                        {
                            "textParagraph": {
                                "text": "${PARAMS_MESSAGE}"
                            }
                        }
                    ]
                },
                {
                    "widgets": [
                        {
                            "buttons": [
                                {
                                    "textButton": {
                                        "text": "VIEW JOB \"${BUILD_JOB_NAME_UPPER}\" BUILD ${BUILD_NAME}",
                                        "onClick": {
                                            "openLink": {
                                                "url": "${JIDO_HOST}/teams/${BUILD_TEAM_NAME}/pipelines/${BUILD_PIPELINE_NAME}/jobs/${BUILD_JOB_NAME}/builds/${BUILD_NAME}"
                                            }
                                        }
                                    }
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}